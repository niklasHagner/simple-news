{
  "name": "text-news",
  "version": "0.0.1",
  "description": "simple server-rendered news",
  "main": "app.js",
  "homepage": "https://github.com/niklasHagner/text-news",
  "repository": {
    "type": "git",
    "url": "git@github.com:niklasHagner/text-news"
  },
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "dev": "npm run build && npm run watch",
    "lint": "npm run lint:scss && npm run lint:js",
    "lint:scss": "sass-lint -v",
    "lint:js": "eslint . --cache",
    "build:sass": "node-sass -w -r assets/styles/ -o public/styles/",
    "build": "npm run build:sass && npm run lint",
    "build:dev": "cross-env NODE_ENV=development npm run build",
    "watch": "npm run watch:scripts & npm run watch:styles",
    "watch:dev": "cross-env NODE_ENV=development npm run watch",
    "start": "node app.js"
  },
  "author": "Niklas Hagner",
  "license": "UNLICENSED",
  "private": false,
  "dependencies": {
    "exp-asynccache": "^3.2.0",
    "exp-config": "^4.2.1",
    "exp-fetch": "^5.4.1",
    "express": "^4.18.2",
    "log": "^6.3.1",
    "moment": "^2.29.4",
    "morgan": "^1.10.0",
    "nunjucks": "^3.2.3",
    "pino": "^8.11.0",
    "split2": "^4.1.0",
    "striptags": "^3.2.0"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.14",
    "chronokinesis": "^4.0.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.36.0",
    "node-sass": "^8.0.0",
    "node-sass-magic-importer": "^5.3.2",
    "sass-lint": "^1.13.1",
    "youch": "^3.2.3"
  },
  "files": [
    "config",
    "lib",
    "app.js",
    ".eslintrc",
    ".eslintignore",
    ".nvmrc"
  ]
}
