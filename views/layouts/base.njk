<!DOCTYPE html>
<html lang="sv">
<head>
  <title>{% block title %}Simple-News{% endblock %}</title>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta name="msapplication-TileColor" content="#555">
  <meta name="msapplication-TileImage" content="/images">

  {% block seo %}
    <meta name="robots" content="noarchive">
  {% endblock %}

  <meta name="theme-color" content="#555">
  <meta name="msapplication-TileColor" content="#da532c">

  <link rel="manifest" href="/assets/site.webmanifest">
  <link rel="apple-touch-icon" sizes="180x180" href="/assets/images/apple-touch-icon.png">
  <link rel="icon" type="image/png" sizes="32x32" href="/assets/images/favicon-32x32.png">
  <link rel="icon" type="image/png" sizes="16x16" href="/assets/images/favicon-16x16.png">
  <link rel="mask-icon" href="/assets/images/safari-pinned-tab.svg" color="#5bbad5">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Martian+Mono&display=swap" rel="stylesheet">

  <style>
  /* CSS RESET */
  h1,h2,h3,h4,
  p, span, pre, code, body {
    margin: 0;
    padding: 0;
  }

  /* LAYOUT */
  body {
    font-family: monospace;
  }

  body * {
    box-sizing: border-box;
  }

  .section {
    display: flex;
    flex-direction: column;
    flex-flow: wrap;
  }

  header {
    padding: 5px;
    border-bottom: solid 1px mediumseagreen;
  }

  .topic {
    color: mediumseagreen;
    text-transform: uppercase;
    padding: 5px;
    display: inline-block;
  }

  .pagination {
    padding: 15px 0;
    display: flex;
    justify-content: space-between;
    border-bottom: solid 1px #ccc;
  }
  
  .pagination--single {
    justify-content: space-around;
  }

  .site-body {
    padding: 10px 10px 0 10px;
  }
  
  .site-footer {
    padding: 40px 10px;
    color: #999;
    text-align: center;
    font-size: 10px;
    background-color: #f2f2f2;
  }

  .pagination {
    background: #6fc0b64f;
    padding: 10px;
  }

  .pagination__button {
    background: mediumseagreen;
    color: white;
    text-decoration: none;
    padding: 20px;
    font-size: 20px;
  }

  .pagination__button:hover {
    text-decoration: underline;
    box-shadow: 1px 2px 3px rgba(20,20,20,0.5);
  }

  .pagination__page-number {
    display: inline-flex;
    align-items: center;
  }

  /* TEASER STYLES */

  .teaser {
    flex: 0 0 100%;
    padding: 10px;
    color: #555;
    border-bottom: dashed 2px #888;
  }

  .teaser:nth-of-type(1) {
    font-size: 1.2em;
  }

  .teaser__image-wrap {
    max-width: 200px;
    max-height: 200px;
    margin-left: 10px;
  }

  .teaser__image-wrap img {
    width: 100%;
  }

  @media screen and (max-width: 900px) {
    .teaser:nth-of-type(9n+9),
    .teaser:nth-of-type(9n+10) {
      flex: 0 0 50%;
    }

    .teaser:nth-of-type(9n+9) {
      border-right: dashed 2px #888;
    }
  }

  @media screen and (min-width: 901px) {
    .teaser {
      flex: 0 0 50%;
    }

    .teaser:nth-of-type(odd) {
      border-right: dashed 2px #888;
    }

    .teaser__image-wrap {
      float: right;
    }
  }

  .teaser a {
    color: #555;
    text-decoration: none;
  }

  .teaser__title {
    font-family: 'Martian Mono', monospace;
  }

  .teaser__title:hover {
    text-decoration: underline;
    color: mediumseagreen;
  }

  .teaser__description {
    grid-area: description;
  }

  .teaser__published {
    display: inline-block;
    text-align: right;
    font-size: 10px;
    color: #888;
  }

  .teaser__source {
    display: inline-flex;
    justify-content: center;
    align-items: center;
    height: 10px;
    padding: 10px;
    font-size: 10px;
    background-color: mediumseagreen;
    color: white;
  }

  </style>

  {% block head %}{% endblock %}
</head>
<body>
  <div class="site-wrapper">
    <div class="site-body">
      {% block body %}{% endblock %}
    </div>
    {% include "partials/siteFooter.njk" %}
  </div>
</body>
</html>
